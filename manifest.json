{
  "manifest_version": 2,
  "name": "GitHub SLOC",
  "version": "1.3.0",
  "description": "Display SLOC on GitHub",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "options_page": "options.html",
  "web_accessible_resources": ["options.html"],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/inject.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "*://*.github.com/*"
  ]
}
